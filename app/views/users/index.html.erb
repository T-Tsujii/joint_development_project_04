<h1>ユーザー 一覧</h1>
<% @users.each do |user| %>
  <p>
    <%= user.name %>
    <%= link_to '詳細', user_path(user.id), class: "btn btn-outline-primary", method: :get%>
    <%= link_to '削除', user_path(user.id), class: "btn btn-outline-primary", method: :delete, data: {confirm: "削除しますか?"}%>
    <%= link_to '編集', edit_user_path(user.id), class: "btn btn-outline-primary", method: :get%>
  </p>
<% end %>