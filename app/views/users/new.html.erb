<h1>ユーザー 作成</h1>
  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :name, "お名前", {class: 'col-sm-2'} %>
      <div class="col-sm-10"><%= f.text_field :name, class: "form-control input-sm", placeholder: "お名前"%></div>
    </div>
    <div class="form-group row">
      <%= f.label :age, "年齢", {class: 'col-sm-2'} %>
      <div class="col-sm-10"><%= f.text_field :age, class: "form-control input-sm", placeholder: "年齢"%></div>
    </div>
    <%= f.submit "送信", class: "btn btn-success", style: "margin-bottom: 20px;" %>
  <% end %>
<%= link_to '一覧画面へ', users_path %>

