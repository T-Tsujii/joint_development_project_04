<h1>メッセージ一覧</h1>
<% if @messages.present? %>
<% @messages.each do |message| %>
    <p>
      <%= message.title %>
      <%= link_to "詳細", message_path(message.id)%>
      <%= link_to "編集", edit_message_path(message.id), method: :get %>
      <%= link_to "削除", message_path(message.id), method: :delete, data: {confirm: "削除しますか？"} %>
    </p>
<% end %>
<% end %>
